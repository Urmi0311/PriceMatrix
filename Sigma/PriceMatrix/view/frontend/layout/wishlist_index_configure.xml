<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_view"/>
    
    <body>
        <referenceBlock name="product.info.addto">
            <block class="Magento\Wishlist\Block\Item\Configure" name="view.addto.wishlist"
                template="Magento_Wishlist::item/configure/addto/wishlist.phtml" />

        </referenceBlock>
        <referenceContainer name="product.info.addto">
            <block class="Sigma\PriceMatrix\Block\Product\PriceTiers" name="price_tiers"
                   template="Sigma_PriceMatrix::product/view/price_tiers.phtml"/>
        </referenceContainer>
        <move element="price_tiers" destination="product.info.addto" before="product.info.addtocart"/>

    </body>
</page>
